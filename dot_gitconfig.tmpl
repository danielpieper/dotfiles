[core]
  editor = nvim
  pager = delta
  excludesfile = ~/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[web]
  browser = firefox

[color]
  ui = auto

[user]
  email = {{ .email }}
  name = Daniel Pieper
  username = danielpieper
{{- if eq .usage "work" }}
  signingkey = 1A0A4B2B

[gpg]
  program = /usr/local/bin/gpg

[commit]
  gpgsign = true
{{- end }}

[push]
  default = simple

[pull]
  rebase = false

[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false

[mergetool "vimdiff"]
  path = nvim

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended

[interactive]
    diffFilter = delta --color-only
